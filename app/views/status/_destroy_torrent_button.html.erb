<a href='#' class="action-button" data-modal="destroy-torrent-<%= torrent_id %>" title="Delete">
  <i class="fa fa-trash"></i>
</a>

<div id="destroy-torrent-<%= torrent_id %>" class="modal">
  <div class="modal-backdrop js-close-modal"></div>
  <div class="modal-box">
    <div class="modal-box-contents">
      <div class="modal-header">
        Are you sure you want to delete this torrent?
      </div>
      <div class="divider">
        <%= button_to 'Yes', destroy_torrent_status_index_path(id: torrent_id), method: 'delete' %>
      </div>
      <div class="divider">
        <button class="js-close-modal">
          Nope
        </button>
      </div>
    </div>
  </div>
</div>
