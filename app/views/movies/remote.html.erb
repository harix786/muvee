<%= render 'subnav' %>

<div id="remote_movies">
  <% if @movies.present? %>
    <%= render 'movie_meta', movies: @movies %>
    <div id="movies-index-panel" refresh="movies-index-panel" class="movies-index panel clearfix">
      <%= render 'movies_list', movies: @movies %>
    </div>
    <div class="movie-actions">
      <%= render 'remote_actions' %>
    </div>
  <% else %>
    <div class="movie-actions full">
      <%= render 'remote_actions' %>
    </div>
  <% end %>
</div>
