<div class='tile-row'>
  <div class="col-2-3 flex-down">
    <% next_two = movies.shift(2) %>
    <% next_two.each do |movie| %>
      <%= render 'tile', movie: movie %>
    <% end %>
  </div>
  <div class="col-1-3">
    <% next_one = movies.shift(1) %>
    <% next_one.each do |movie| %>
      <%= render 'tile', movie: movie %>
    <% end %>
  </div>
</div>
