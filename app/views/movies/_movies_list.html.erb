<ul class="responsive-grid">
  <% movies.each do |movie| %>
    <li class="poster">
      <div class="poster-innards">
        <a
          class="poster-link aspect-poster js-movie-tile<% if movie.remote? %> js-find-sources<% end %>"
          <% if movie.local? %>
          href="<%= video_path(movie) %>"
          <% elsif movie.remote? %>
          href="<%= find_sources_movie_path(movie) %>"
          <% end %>
          data-3d="<%= movie.is_3d? %>"
          data-fanart-path="<%= fanart_video_path(movie) %>"
          data-title="<%= movie.title %>"
          data-year="<%= movie.year %>"
          data-quality="<%= movie.quality %>"
          data-overview="<%= movie.overview %>">
          <% if poster_url = movie.poster_url %>
            <img class="video-thumbnail has-aspect" src="<%= poster_url %>" alt="">
          <% else %>
            <img class="video-thumbnail has-aspect" src="/images/no-poster.png" alt="">
          <% end %>

          <div class="thumbnails hide">
            <%= render 'movie_thumbnails', movie: movie %>
          </div>
          <div class="js-sources-info inline-sources hide"></div>
        </a>
      </div>
    </li>
  <% end %>
  <div class="clearfix"></div>
</ul>
