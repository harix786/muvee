<div class="movie-actions--remote">
  <div class="movie-actions__section">
    <h2>Discover more movies</h2>
    <%= link_to 'Find me some', discover_more_movies_path, class: 'action-button' %>
  </div>
  <div class="movie-actions__section">
    <%= form_tag movie_search_movies_path, method: "POST", "remote-form" => true, "refresh-on-success" => "movies-index-panel n-remote-results" do %>
      <h2><%= label_tag :q, "Search for a movie:" %></h2>
      <%= text_field_tag :q, '', class: 'action-button', placeholder: 'e.g., Skyfall' %>
      <%= button_tag "Search", type: "submit", class: 'action-button' %>
    <% end %>

    <div id="n-remote-results" refresh="n-remote-results">
      <% if @query.present? %>
        <p>
          <%= @movies.present? ? "#{@movies.length} results found for" : "No results found for" %>
          <em><%= @query %></em>
        </p>
        <% else %>
      <% end %>
    </div>
  </div>
</div>
