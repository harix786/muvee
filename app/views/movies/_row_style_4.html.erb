<div class='tile-row'>

  <% if rand() > 0.5 then %>
    <div class='col-2-3 flex-down'>
      <% next_movies = @movies.shift(1) %>
      <% next_movies.each do |movie| %>
        <%= render 'tile', movie: movie %>
      <% end %>
    </div>
    <div class='col-1-3 flex-down'>
      <% next_movies = @movies.shift(2) %>
      <% next_movies.each do |movie| %>
        <%= render 'tile', movie: movie %>
      <% end %>
    </div>
  <% else %>
    <div class='col-1-3 flex-down'>
      <% next_movies = @movies.shift(2) %>
      <% next_movies.each do |movie| %>
      <%= render 'tile', movie: movie %>
      <% end %>
    </div>
    <div class='col-2-3 flex-down'>
      <% next_movies = @movies.shift(1) %>
      <% next_movies.each do |movie| %>
      <%= render 'tile', movie: movie %>
      <% end %>
    </div>
  <% end %>
</div>
