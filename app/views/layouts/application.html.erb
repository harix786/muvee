<!DOCTYPE html>
<html>
<head>
  <title>
    Î¼v :: <%= controller_name %>
  </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="import" href="assets/brick-dialog/brick-dialog.html">
  <%= csrf_meta_tags %>
</head>
<body>

  <header class="main-navigation">
    <ul class="top-nav-container">
      <li class="<% if controller_name == 'videos' && action_name == 'index' %>active<% end %>">
        <a class="top-nav-button home" href="/">
          <i class="fa fa-home"></i>
        </a>
      </li>
      <li <% if controller_name == 'movies' %>class="active" <% end %>>
        <%= link_to movies_path, class: 'top-nav-button' do %>
          <i class="fa fa-film"></i> Movies
        <% end %>
      </li>
      <li <% if controller_name == 'series' %>class="active" <% end %>>
        <%= link_to series_index_path, class: 'top-nav-button' do %>
          <i class="fa fa-desktop"></i> TV
        <% end %>
      </li>
      <li>
        <a href="#" class="top-nav-button">
          <i class="fa fa-random"></i> Shuffle
        </a>
      </li>
      <li class="fr">
        <a id="showGlobalOptions" href="#" class="top-nav-button">
          <i class="fa fa-cogs"></i>
        </a>
      </li>
    </ul>
  </header>

<%= yield %>

<brick-dialog id="global-options">
  <footer vertical>
    <button onclick="rescanLibrary()">Re-scan library</button>
    <button onclick="$('#global-options')[0].hide()">Cancel</button>
  </footer>
</brick-dialog>

<brick-dialog id="scan-results">
  <header>Library Scan Complete</header>
  <section>
    <ul>
      <li>
        <span class="new-tv"></span> new TV shows
      </li>
      <li>
        <span class="failed-tv"></span> TV shows couldn't be added
      </li>
      <li>
        <span class="new-movies"></span> new movies
      </li>
      <li>
        <span class="failed-movies"></span> movies couldn't be added
      </li>
    </ul>
  </section>
  <footer vertical>
    <button>Ok</button>
  </footer>
</brick-dialog>

</body>
</html>
