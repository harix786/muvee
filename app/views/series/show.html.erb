<div id="series">
  <div class="series-information">
    <h1 class="series-name">
      <a href="<%= series_index_path %>" class="back">
        <i class="fa fa-chevron-left"></i>
      </a> <%= @series.title  %>
    </h1>
    <h3 class="series-overview">
      <%= @series.overview %>
    </h3>
    <div class="poster-buttons">
      <%= link_to "Shuffle", video_path(@videos.map(&:id).sample, shuffle: true, series_id: @series.id), class: "poster-button" %>
      <div class="dropdown poster-button">
        <button data-modal="season-selector">
          All Seasons
        </button>
      </div>
      <% if @sort == :latest %>
        <a href="?sort=release_order" class="poster-button">
          <i class="fa fa-sort"></i> Sort: latest
        </a>
      <% elsif @sort == :release_order %>
        <a href="?sort=unwatched" class="poster-button">
          <i class="fa fa-sort"></i> Sort: release order
        </a>
      <% elsif @sort == :unwatched %>
        <a href="?sort=latest" class="poster-button">
          <i class="fa fa-sort"></i> Sort: unwatched
        </a>
      <% end %>
      <div class="clearfix"></div>
    </div>
  </div>
  <div class="video-list">
    <div class="series-featured-image" style="background:url(<%= @series.fanart_url %>); background-size: cover;"></div>
    <% if @series.last_watched_video %>
      <div class="featured-episode">
        <%= render 'video_tile', video: @series.last_watched_video %>
      </div>
    <% end %>
    <div class="video-list-container">
      <% @videos.each do |show| %>
        <% unless show == @series.last_watched_video %>
          <%= render 'video_tile', video: show %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div id="season-selector" class="modal">
  <div class="modal-backdrop js-close-modal"></div>
  <div class="modal-box">
    <div class="modal-box-contents">
      <div class="modal-header">
        Filter by season
      </div>
      <div class="divider">
        <%= link_to "All Seasons", series_path(@series) %>
      </div>
      <% @seasons.each do |s| %>
        <div class="divider">
          <%= link_to "Season #{s}", series_path(@series, season: s) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
