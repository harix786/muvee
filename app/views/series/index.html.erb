<%= render 'subnav' %>

<div id="all_series" class="clearfix">
  <div class="panel">
    <% if @series.present? %>
      <ul class="responsive-grid">
        <% @series.each do |serie| %>
          <li class="poster aspect10x7">
            <div class="poster-innards">
              <a class="poster-link aspect-poster" href="<%= series_path(serie) %>">
                <% if poster_url = serie.poster_url %>
                  <img class="video-thumbnail has-aspect" src="<%= poster_url %>" alt="">
                <% else %>
                  <%= render 'shared/no_poster_available' %>
                <% end %>
              </a>
            </div>
          </li>
        <% end %>
        <div class="clearfix"></div>
      </div>
    <% else %>
      <div>No series found.</div>
    <% end %>
  </div>
</div>
