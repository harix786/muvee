<%= render 'subnav' %>

<%= render 'series_fixed_search' %>

<div class="index-actions" define="{findClicked: false}">
  <h3>Discover more shows</h3>

  <% unless @searching %>
    <%= link_to discover_more_series_index_path, class: 'action-button', 'tg-remote' => 'POST' do %>
      <i class="fa fa-binoculars"></i>
      Sure, find me some
    <% end %>
  <% else %>
    <p>Muvee is searching for more series in the background.</p>
  <% end %>
  <%= render 'shared/series_discovery_reporter' %>
</div>

<%= render 'series_results' %>
